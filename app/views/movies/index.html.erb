  <%= submit_tag("Search") %>
<% end %>

<% @movies.each do |movie| %>
	<%= link_to image_tag(movie.image), movie_path(movie) %>
	<h3><%= formatted_date(movie.release_date) %></h3>
	<h4><%= movie.runtime_in_minutes %> minutes</h4>
	<p><%= movie.description %></p>
	<hr>
<% end %>