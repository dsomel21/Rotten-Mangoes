<footer>
	<small>
		<% if current_user %>
		Signed in as <%= current_user.full_name %> (<%= link_to "Log out", session_path("current"), method: :delete %>)
		<% else %>
		<%= link_to "Log In", new_session_path %> | <%= link_to "Sign Up", new_user_path %>
		<% end %>
		<% if current_user && current_user.admin %>
		<strong>Adminstrator Mode</strong>
		<% end %>
		<% if impersonating? %>
		<%= link_to "Stop Impersonating", end_impersonation_admin_user_path(current_user) %>
		<% end %>
	</small>
</footer>